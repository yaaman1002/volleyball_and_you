<div class="container">
  <div class="row" style="background-color: #FFF9EE;">
    <div class="text-center col-md-12">
      <h3 class="text-center mt-3 pt-4 pb-4" style="background-color: #84C98B;">ユーザー編集</h3>
         <%= form_with model: @user, url: admin_user_path(@user) do |f| %>
           <div class="form-group mt-4">
              <label for="inputName">名前</label>
              <%= f.text_field :name, autofocus:true %>
            </div>
            
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group mt-4">
              <label for="inputImage">プロフィール画像</label>
              <%= f.file_field :profile_image, accept: "image/*" %>
            </div>

            <div class="form-group mt-4">
              <label for="introduction">自己紹介</label>
              <%= f.text_area :introduction %>
            </div>

            <div class="form-group">
              <%= f.submit "ユーザー情報を編集する", class: 'btn btn-outline-primary' %>
            </div>
            <% end %>
    </div>
  </div>
</div>