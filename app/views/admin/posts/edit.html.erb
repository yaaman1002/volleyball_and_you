<div class="container">
  <div class="row" style="background-color: #FFF9EE;">
    <div class="text-center col-md-12">
      <h2 class="text-center mt-3 pt-4 pb-4" style="background-color: #84C98B;">投稿の編集</h2>
        <%= form_with model: @post, url: admin_post_path(@post), method: :patch do |f| %>

            <h4>タイトル</h4>
              <%= f.text_field :title %>

            <h4>本文</h4>
              <%= f.text_area :body %>

            <p><%= f.submit '投稿を編集する' %></p>

        <% end %>
    </div>
  </div>
</div>