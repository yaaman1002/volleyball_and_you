<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 text-center">
      <h3 class="mb-3">いいねした投稿一覧</h3>
      　<% @like_posts.each do |one_post| %>
      　 <div class="col-md-3">
            <%= image_tag(one_post.get_image, size: "300x300") %>
      　 </div>
      　 <div class="col-md-7">
            <div class="card-body">
              <p class="list-group-item"><%= one_post.created_at.strftime('%Y/%m/%d') %></p>
              <h5 class="list-group-item font-weight-bold"><%= one_post.title %></h5>
              <p class="list-group-item"><%= one_post.body.truncate(100) %></p>
              <h6 class="list-group-item"><%= one_post.user.name %></h6>
              <h6 class="list-group-item"><%= link_to "詳細はこちら", post_path(one_post.post_id) %></h6>
            </div>
      　 </div>
      　<% end %>
    </div>
  </div>
</div>  