<div class="container mt-3 mb-3" style="background-color: #FFF9EE;">
  <h1 class="text-center pt-3 pb-3 mt-2" style="background-color: #84C98B;">New-Post</h1>
    <div class="row" style="background-color: #fef9fb;">
      <div class="col-md-12 text-center">
       <%= form_with model: @post do |f| %>
        <div class="text-center ml-5">
          <%= f.label :title, "タイトル" %><br >
          <%= f.text_field :title %>
         </div>
    
        <div class="ml-5">
            <%= f.label :body, "本文" %><br >
            <%= f.text_area :body %>
        </div>
    
        <div class="ml-5">
            <%= f.label :images, "画像" %><br >
            <%= f.file_field :images, accept: "image/*", multiple: true %><br >
        </div>
    
        <div class="mt-3 ml-5">
            <%= f.submit "new_post", class: 'btn btn-outline-primary' %>
        </div>
    
       <% end %>
      </div>
    </div>
</div>
