<div class="container text-center mt-3 mb-3" style="background-color: #cee4ae;">
  <h1>New_post</h1>
  <%= form_with model: @post do |f| %>
    <div class="ml-5">
      <%= f.label :title, "タイトル" %><br >
      <%= f.text_field :title %>
     </div>
    
    <div class="ml-5">
        <%= f.label :body, "本文" %><br >
        <%= f.text_area :body %>
    </div>
    
    <div class="ml-5">
        <%= f.label :images, "画像" %><br >
        <%= f.file_field :images, accept: "image/*", multiple: true %><br >
    </div>
    
    <div class="mt-3 ml-5">
        <%= f.submit "new_post", class: 'btn btn-outline-primary' %>
    </div>
    
    <% end %>
  </div>
