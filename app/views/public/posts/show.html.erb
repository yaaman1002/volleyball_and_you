<div class="container" style="background-color: #FFF9EE;">
  <h2 class="text-center mt-3 mb-3" style="background-color: #71CC6A;">投稿詳細</h2>
    <div class="row">
      <div class="col-md-3 ml-2" style="background-color: #F6F7F8;">
         <p><%= link_to user_path(@user.id) do %></p>
         <p><%= image_tag @user.get_profile_image(100,100) %></p>
         <p><%= @user.name %></p>
           <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
          <p><%= @post.title %></p>
          <p><%= @post.body %></p>
       </div>     
    </div>
    <div class="row mt-3 mb-3">
      <div class="col-md-8 offset-md-1" style="background-color: #84C98B;">
        <ul>
          <li class="comment-create">
            <h6 class="text-left title">コメント</h6>
               <p>コメント数：<span id="comment_count"><%= @post.comments.count %></span></p>
       　　　　　　　　 <div id="comments">
         　　　　　　　　   <%= render "public/comments/commentshow", post: @post %>
                  </div>
            </li>
        </ul>
        <% if @post.user==current_user %>
        <div id ="comment-form">
          <h6 class="text-left">コメントを投稿する</h6>
            <%= render "public/comments/form", post: @post, comment: @comment %>
        </div>
        <p><%= link_to '投稿編集', edit_post_path(@post), class: 'btn btn-sm btn-success' %></p>
        <p><%= link_to '投稿削除', post_path(@post), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm"=>"本当に消しますか？" %></p>
            <% end %>
      </div>
  </div>
</div>

