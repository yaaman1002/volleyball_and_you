<div class="container">
  <div class="row mt-3 mb-3" style="background-color: #FFF9EE;">
    <div class="col-md-12 mt-3 mb-3">
      <h2 class="text-center pt-4 pb-4" style="background-color: #92cb97;">フォロワー一覧</h2>
        <table class="table">
          <thead>
            <tr>
              <th>プロフィール</th>
              <th>名前</th>
              <th>
                <th colspan="3"></th>
              </th>
            </tr>
          </thead>
        <tbody>
           <% @users.each do |user| %>
             <tr>
               <td>
                 <p><%= link_to user_path(user.id) do %>
                    <%= image_tag user.get_profile_image(100,100) %></p>
                    <% end %>
               </td>
               <td>
                 <p><%= user.name %></p>
               </td>
             </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>