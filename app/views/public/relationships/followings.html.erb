<div class="container">
  <div class="row">
    <div class="col-md-10 mt-3 mb-3" style="background-color: #FFF9EE;">
      <h2 class="text-center">フォロー一覧</h2>
        <table class="table">
          <thead>
            <tr>
              <th>プロフィール</th>
              <th>名前</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <p><%= image_tag user.get_profile_image(100,100) %></p>
                <td>
                  <p><%= user.name %></p>
                </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>