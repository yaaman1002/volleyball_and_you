<div class="container">
  <div class="row" style="background-color: #FFF9EE;">
    <div class="col-md-12 mt-3 mb-3">

        <% if @model == "user" %>
          <h3 class="text-center pt-4 pb-4" style="background-color: #92cb97;">"<%= @content %>"の検索結果</h3>
          <table class="table">
            <thead>
              <tr>
                <th>プロフィール</th>
                <th>名前</th>
                <th></th>
                <th colspan="3"></th>
              </tr>
            </thead>
          <tbody>
            <% @records.each do |record| %>
              <tr>
                <td><%= link_to user_path(record) do %>
                     <%= image_tag record.get_profile_image(50,50) %>
                    <% end %>
                </td>
                <td><%= record.name %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% elsif @model == 'post' %>
          <h3>投稿検索結果 "<%= @content %>"</h3>
          <table>
            <tbody>
              <% @records.each do |record| %>
                <tr>
                  <td><%= record.title %></td>
                  <td><%= record.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>